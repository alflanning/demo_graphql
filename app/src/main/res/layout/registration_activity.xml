<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название фирмы"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/idEditCompanyName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон фирмы"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditCompanyPhone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Веб-сайт"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditCompanyWebSite"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Штат"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditState"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Город"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditCity"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя пользователя"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditUserName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия пользователя"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditUserSecondName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон пользователя"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditUserPhone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Адрес"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditAdress"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Электронная почта"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пароль"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/idEditPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="35dp"/>

            <Button
                android:id="@+id/idRegistrationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:onClick="onRegistrationUserClick"
                android:layout_marginBottom="20dp"/>



        </LinearLayout>


    </ScrollView>



</FrameLayout>